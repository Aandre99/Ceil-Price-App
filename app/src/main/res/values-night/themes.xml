<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.CursoAndroid" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="android:statusBarColor">@color/black</item>
    </style>

    <style name="TextTheme">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="BackgroundTheme">
        <item name="android:background">@color/black</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="LogoTheme">
        <item name="android:tint">@color/white</item>
    </style>

    <style name="ContainerTheme">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextAutocomplteTheme">
        <item name="android:tint">@color/white</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="darkModeIconTheme">
        <item name="android:tint">@color/white</item>
        <item name="android:background">@color/black</item>
    </style>
    <style name="TextInputLayoutTheme" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:tint">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="boxStrokeColor">@color/text_fild_selector</item>
        <item name="hintTextColor">@color/white</item>
        <item name="boxStrokeWidth">2dp</item>
    </style>

    <style name="chooseInputLayoutTheme" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="android:tint">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="boxStrokeColor">@color/text_fild_selector</item>
        <item name="hintTextColor">@color/white</item>
        <item name="boxStrokeWidth">2dp</item>
    </style>

    <style name="cardViewTheme" parent="CardView">
        <item name="cardBackgroundColor">@color/my_black</item>
        <item name="cardCornerRadius">20dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:drawableTint">@color/white</item>
    </style>

    <style name="dialogTheme">
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="viewTheme">
        <item name="android:backgroundTint">@color/my_white</item>
        <item name="android:background">@color/my_white</item>
    </style>

    <style name="BottomNavBar" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:background">@color/black</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:drawableTint">@color/white</item>
    </style>

</resources>